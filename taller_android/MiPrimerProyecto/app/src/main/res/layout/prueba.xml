<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:visibility="visible">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Clientes"
        android:translationX="140dp"
        android:translationY="60dp" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente"
        android:translationX="60dp"
        android:translationY="100dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_text"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:translationX="60dp"
        android:translationY="100dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/subtitleText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clientes Ingresados"
        android:translationX="60dp"
        android:translationY="80dp" />

    <TextView
        android:id="@+id/listadoClientesText"
        android:layout_width="280dp"
        android:layout_height="330dp"
        android:scrollbars="vertical"
        android:text="Listado de Clientees"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationX="50dp"
        android:translationY="120dp" />

    <Button
        android:id="@+id/guardarButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#9882C7"
        android:text="Guardar"
        android:translationX="50dp"
        android:translationY="140dp" />

    <Button
        android:id="@+id/verClientesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#9882C7"
        android:text="Ver Clientes"
        android:translationX="210dp"
        android:translationY="93dp" />

</LinearLayout>